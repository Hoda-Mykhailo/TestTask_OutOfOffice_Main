@using OutOfOffice_Main.Enums
@using OutOfOffice_Main.Models.Entities
@model LeaveRequest

@{
   
    @if (ViewData["edit"] == "true")
    {
        ViewData["Title"] = "Edit leave request";
    }
    else
    {
        ViewData["Title"] = "Add leave request";
    }
}

<div>
    <h1>
        @if (ViewData["edit"] == "true")
        {
            <text>Edit leave request:</text>
        }
        else
        {
            <text>Add leave request:</text>
        }
    </h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mt-3">
            <label class="form-label">Full name*</label>
            <select class="form-control" asp-for="AbsenceReason" asp-items="Html.GetEnumSelectList<AbsenceReason>()" required>
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">Start date*</label>
            <input class="form-control"type="date" asp-for="StartDate" required/>
        </div>
        <div class="mt-3">
            <label class="form-label">End date*</label>
            <input class="form-control" type="date" asp-for="EndDate" required />
        </div>
        <div class="mt-3">
            <label class="form-label">Comment</label>
            <input class="form-control" type="text" asp-for="Comment" />
        </div>
        <div class="mt-3">
            <label class="form-label">Status*</label>
            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" required>
            </select>
        </div>
        
        <div class="mt-3 text-center">
            @if (ViewData["edit"] == "true")
            {
                <button type="submit" class="btn btn-primary w-25">Edit</button>
            }
            else
            {
                <button type="submit" class="btn btn-success w-25">Add</button>
            }
            
        </div>
    </form>
</div>