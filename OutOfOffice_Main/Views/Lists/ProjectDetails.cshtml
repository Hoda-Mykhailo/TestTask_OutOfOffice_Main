@using OutOfOffice_Main.Enums
@using OutOfOffice_Main.Models.Entities
@model Project

@{
    ViewData["Title"] = "Project details";
}

<div>
    @if (Model == null)
    {
        <h2>There is no project with this Id</h2>
    }
    else
    {
        <h1>Project details:</h1>

        <form method="post" enctype="multipart/form-data">
            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="number" class="form-control" asp-for="Id" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Type</label>
                <input type="text" class="form-control" asp-for="Type" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">StartDate</label>
                <input type="date" class="form-control" asp-for="StartDate" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">EndDate</label>
                <input type="date" class="form-control" asp-for="EndDate" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">ProjectManager</label>
                <input type="text" class="form-control" asp-for="ProjectManager.FullName" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Comment</label>
                <input type="text" class="form-control" asp-for="Comment" id="commentField" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Status</label>
                <input type="text" class="form-control" asp-for="Status" disabled />
            </div>
        </form>
    }
</div>