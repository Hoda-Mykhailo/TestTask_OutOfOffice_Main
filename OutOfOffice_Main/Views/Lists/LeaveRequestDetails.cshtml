@using OutOfOffice_Main.Enums
@using OutOfOffice_Main.Models.Entities
@model LeaveRequest

@{
    ViewData["Title"] = "Leave request details";
}

<div>
    
    @if (Model == null)
    {
        <h2>There is no request with this Id</h2>
    }
    else
    {
        <h1>Leave request details:</h1>

        <form method="post" enctype="multipart/form-data">
            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="number" class="form-control" asp-for="Id" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Employee Full name</label>
                <input type="text" class="form-control" asp-for="Employee.FullName" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Absence reason</label>
                <input type="text" class="form-control" asp-for="AbsenceReason" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Start date</label>
                <input type="date" class="form-control" asp-for="StartDate" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">End date</label>
                <input type="date" class="form-control" asp-for="EndDate" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Comment</label>
                <input type="text" class="form-control" asp-for="Comment" disabled />
            </div>
            <div class="mt-3">
                <label class="form-label">Status</label>
                <input type="text" class="form-control" asp-for="Status" disabled />
            </div>
        </form>
    }
</div>