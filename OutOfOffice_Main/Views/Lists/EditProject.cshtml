@using OutOfOffice_Main.Enums
@using OutOfOffice_Main.Models.Entities
@using OutOfOffice_Main.Models
@model AddEditProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
}

<div>
    <h1>Edit Project:</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mt-3">
            <label class="form-label">Type</label>
            <select class="form-control" asp-for="Type" asp-items="Html.GetEnumSelectList<ProjectType>()" required>
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">StartDate</label>
            <input type="date" class="form-control" asp-for="StartDate" required />
        </div>
        <div class="mt-3">
            <label class="form-label">EndDate</label>
            <input type="date" class="form-control" asp-for="EndDate" />
        </div>
        <div class="mt-3">
            <label class="form-label">PeoplePartnerId</label>
            <select class="form-control" asp-for="ProjectManagerId" required>
                <option selected="selected" value="">Select</option>
                @foreach (var manager in Model.ProjectManagers)
                {
                    <option value="@manager.Id">@manager.FullName</option>
                }
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">Comment</label>
            <input type="text" class="form-control" asp-for="Comment" id="commentField" />
        </div>
        <div class="mt-3">
            <label class="form-label">Status</label>
            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" required>
            </select>
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary w-25">Save</button>
            <button type="submit" class="btn btn-danger w-25" asp-controller="Lists" asp-action="DeleteProject" asp-route-id="@Model.Id">Delete</button>
        </div>
    </form>
</div>